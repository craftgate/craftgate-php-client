{
    "name": "craftgate/craftgate",
    "type": "library",
    "description": "craftgate php client",
    "homepage": "https://craftgate.io",
    "keywords": [
        "craftgate",
        "craftgate.io"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Craftgate developers and contributors",
            "homepage": "https://github.com/craftgate/craftgate-php-client/contributors"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0|~5.0"
    },
    "autoload": {
        "psr-4": {
            "Craftgate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "": "unit-tests/"
        },
        "files": ["unit-tests/polyfill.php"]
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors"
    }
}
